<CameraScreen>:
    TopBar:
        title: "Scan QR Code"

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        ScrollView:
            size_hint_y: None
            height: root.height - dp(80)
            pos_hint: {"top": 1}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [40, 20, 40, 20]
                spacing: 20

                Label:
                    text: "[i]Place the QR code inside the frame to scan it please. Avoid shaking to get results quickly[/i]"
                    markup: True
                    font_size: "17sp"
                    color: rgba('#6A707C')
                    size_hint_x: 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'middle'

                Image:
                    id: camera_image
                    size_hint: None, None
                    size: "640dp", "480dp"
                    allow_stretch: True
                    pos_hint: {"center_x": 0.5}

                Label:
                    id: scan_status
                    text: "Scanning QR Code..."
                    font_size: "20sp"
                    halign: "center"
                    color: rgba('#283F5E')
                    size_hint_x: 1
                    size_hint_y: None
                    height: "40dp"
                    text_size: self.width, None
                    valign: 'middle'