<ChangeEmailScreen>:
    name: "change_email"
    TopBar:
        title: "Change email"
        right_action_items: [["email"]]

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        ScrollView:
            size_hint_y: None
            height: root.height - dp(80)
            pos_hint: {"top": 1}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [40, 20, 40, 20]
                spacing: 20

                Textinput:
                    id: email_change
                    hint_text: "Email"
                    icon_right: "email"
                    
                Textinput:
                    id: new_email_change
                    hint_text: "New email"
                    icon_right: "email"
                    

                Textinput:
                    id: password
                    hint_text: "Password"
                    icon_right: "eye-off"
                    password: True
                    

                BoxLayout:
                    size_hint: 1, None
                    height: "30dp"
                    spacing: 10

                    MDCheckbox:
                        id: cb
                        size_hint: None, None
                        width: "30dp"
                        height: "30dp"
                        on_release:
                            password.password = not password.password
                            password.icon_right = "eye" if password.icon_right == "eye-off" else "eye-off"

                    MDLabel:
                        text: '[ref=Show Password]Show Password[/ref]'
                        markup: True
                        font_size: "14sp"
                        color: rgba('#6A707C')
                        on_ref_press:
                            cb.active = not cb.active
                            password.password = not password.password
                            password.icon_right = "eye" if password.icon_right == "eye-off" else "eye-off"

                RoundedButton:
                    text: 'Continue'
                    on_release: 
                        root.manager.transition.direction = "left" 
                        root.change_email()

                