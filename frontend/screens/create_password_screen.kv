<CreatePasswordScreen>:
    name: "create_password_screen"
    TopBar:
        title: "CREATE PASSWORD"
        
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        ScrollView:
            size_hint_y: None
            height: root.height - dp(80)
            pos_hint: {"top": 1}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [40, 20, 40, 20]
                spacing: 20

                Label:
                    text: "Create new password"
                    font_size: "36sp"
                    bold: True
                    color: rgba('#283F5E')
                    size_hint_x: 1
                    size_hint_y: None
                    height: "50dp"
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'middle'

                Label:
                    text: "[i]Your new password must be unique from those previously used.[/i]"
                    markup: True
                    font_size: "19sp"
                    color: rgba('#6A707C')
                    size_hint_x: 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'middle'

                Textinput:
                    id: password_forget
                    hint_text: "Password"
                    icon_right: "eye-off"
                    password: True
                    
                Textinput:
                    id: confirm_password_forget
                    hint_text: "Confirm password"
                    icon_right: "eye-off"
                    password: True
                   
                BoxLayout:
                    size_hint: 1, None
                    height: "30dp"
                    spacing: 10

                    MDCheckbox:
                        id: cb
                        size_hint: None, None
                        width: "30dp"
                        height: "30dp"
                        on_release:
                            password_forget.password = not password_forget.password
                            password_forget.icon_right = "eye" if password_forget.icon_right == "eye-off" else "eye-off"
                            confirm_password_forget.password = not confirm_password_forget.password
                            confirm_password_forget.icon_right = "eye" if confirm_password_forget.icon_right == "eye-off" else "eye-off"

                    MDLabel:
                        text: '[ref=Show Password]Show Password[/ref]'
                        markup: True
                        font_size: "14sp"
                        color: rgba('#6A707C')
                        on_ref_press:
                            cb.active = not cb.active
                            password_forget.password = not password_forget.password
                            password_forget.icon_right = "eye" if password_forget.icon_right == "eye-off" else "eye-off"
                            confirm_password_forget.password = not confirm_password_forget.password
                            confirm_password_forget.icon_right = "eye" if confirm_password_forget.icon_right == "eye-off" else "eye-off"

                RoundedButton:
                    text: 'Reset Password'                   
                    on_release: 
                        root.reset_action()
                  
                Label:
                    text: "[color=#6C6F72]Remember your password?[/color] [u][color=#3BA8DA][ref=login]Login Now[/ref][/color][/u]"
                    markup: True
                    size_hint_x: 1
                    size_hint_y: None
                    height: "30dp"
                    font_size: "14sp"
                    halign: 'center'
                    on_ref_press: app.navigate("login_screen")